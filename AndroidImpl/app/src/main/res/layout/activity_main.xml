<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app=" "
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.antonio.koteles.androidimpl.MainActivity"
    android:weightSum="1"
    android:orientation="vertical">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name..."
        android:id="@+id/nameInput"
        android:textColorLink="@android:color/holo_green_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address..."
        android:ems="10"
        android:id="@+id/addressInput"
        android:textColorLink="@android:color/holo_green_light"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/nameInput"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product name..."
        android:ems="10"
        android:id="@+id/productNameInput"
        android:textColorLink="@android:color/holo_green_light"
        android:layout_below="@+id/addBtn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Description..."
    android:ems="10"
    android:id="@+id/descriptionInput"
    android:textColorLink="@android:color/holo_green_light"
    android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
    android:layout_alignParentStart="true" />



    <Button
        android:text="Add"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:id="@+id/addBtn"
        android:background="@android:color/holo_green_dark"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="0dp"
        android:fontFamily="serif-monospace"
        android:layout_alignTop="@+id/addressInput"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Show/refresh list"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/refreshBtn"
        android:layout_marginTop="2dp"
        android:background="@android:color/holo_orange_dark"
        android:layout_alignTop="@+id/productNameInput"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Send mail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:onClick="sendMail"
        android:layout_marginTop="2dp"
        android:id="@+id/sendMailBtn"
        android:background="@android:color/holo_blue_bright"
        android:layout_above="@+id/descriptionInput"
        android:layout_alignParentEnd="true" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myListView"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/descriptionInput" />

</LinearLayout>

